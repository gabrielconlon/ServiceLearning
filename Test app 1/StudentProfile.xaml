<Window x:Class="Test_app_1.StudentProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Profile" Height="517" Width="510">
    <Grid>
        <Label Content="Completion of Paperwork" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="10,155,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Notes" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="10,289,0,0" Name="label2" VerticalAlignment="Top" />
		<TextBox Margin="12,323,12,12" Name="textBox1" Text="This is a basic text box, could also use a table of notes similiar to the Agency Expandables" TextWrapping="Wrap" />
		<Button Content="Save" Height="23" HorizontalAlignment="Right" Margin="0,294,12,0" Name="save_BTN" VerticalAlignment="Top" Width="75" />
		<Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,294,93,0" Name="cancel_BTN" VerticalAlignment="Top" Width="75" Click="cancel_BTN_Click" />
		<CheckBox Content="Liability Waiver" Height="16" HorizontalAlignment="Left" Margin="23,189,0,0" Name="liabilityWaiver_RBTN" VerticalAlignment="Top" />
		<CheckBox Content="Project Agreement" Height="16" HorizontalAlignment="Left" Margin="23,211,0,0" Name="projectAgreement_RBTN" VerticalAlignment="Top" />
		<CheckBox Content="Time Log" Height="16" HorizontalAlignment="Left" Margin="23,233,0,0" Name="timeLog_RBTN" VerticalAlignment="Top" />
		<CheckBox Content="Confirmed Hours" Height="16" HorizontalAlignment="Left" Margin="23,255,0,0" Name="confirmedHours_RBTN" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,107,0,0" Name="studentLastName_TB" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="136,107,0,0" Name="studentFirstName_TB" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="262,107,0,0" Name="studentMiddleName_TB" VerticalAlignment="Top" Width="120" />
        <TextBox DataContext="{Binding}" Height="23" HorizontalAlignment="Left" Margin="10,44,0,0" Name="studentID_TB" VerticalAlignment="Top" Width="100" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="116,44,0,0" Name="graduationYear_TB" VerticalAlignment="Top" Width="96" />
        <Label Content="Student ID" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="studentID_LBL" VerticalAlignment="Top" />
        <Label Content="Last Name" Height="28" HorizontalAlignment="Left" Margin="10,73,0,0" Name="studentLastName_LBL" VerticalAlignment="Top" />
        <Label Content="Graduation Year" Height="28" HorizontalAlignment="Left" Margin="116,10,0,0" Name="studentGraduationYear_LBL" VerticalAlignment="Top" />
        <Label Content="Middle Name" Height="28" HorizontalAlignment="Left" Margin="262,73,0,0" Name="studentMiddleName_LBL" VerticalAlignment="Top" />
        <Label Content="First Name" Height="28" HorizontalAlignment="Left" Margin="136,73,0,0" Name="studentFirstName_LBL" VerticalAlignment="Top" />
    </Grid>
</Window>
